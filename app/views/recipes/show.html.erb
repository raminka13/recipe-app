<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<%= form_with(model: [@user, @recipe]) do |form| %>
  <%= form.hidden_field :public, value: !@recipe.public %>
  <%= form.submit 'Public?' %>
<% end %>
<br>

<%= link_to "Generate List", user_recipe_shopping_list_index_path(@user, @recipe) %>
<%= link_to "Add ingredient", new_user_recipe_recipe_food_path(@user, @recipe) %>

  <table>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
      <%= render @recipe_foods %>
  </table>


<div>
  <%= link_to "Edit this recipe", edit_user_recipe_path(@user, @recipe) %> |
  <%= link_to "Back to recipes", user_recipes_path(@user) %>

  <%= button_to "Delete Recipe", user_recipe_path(@user, @recipe), method: :delete %>
</div>
